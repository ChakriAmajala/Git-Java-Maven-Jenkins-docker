pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ChakriAmajala/Git-Java-Maven-Jenkins-docker.git'
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t git-java-maven-jenkins-docker:latest .'
            }
        }

        stage('Run Container') {
            steps {
                sh '''
                docker rm -f git-java-maven-jenkins-container || true
                docker run -d -p 8081:8080 --name git-java-maven-jenkins-container git-java-maven-jenkins-docker:latest
                '''
            }
        }
    }
}

