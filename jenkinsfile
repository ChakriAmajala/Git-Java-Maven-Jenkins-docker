pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ChakriAmajala/Git-Java-Maven-Jenkins-docker.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t my-html-app .'
                }
            }
        }

        stage('Run Container') {
            steps {
                script {
                    sh '''
                    # stop & remove old container if running
                    docker rm -f my-html-app || true

                    # run new container
                    docker run -d -p 8088:80 --name my-html-app my-html-app
                    '''
                }
            }
        }
    }
}

